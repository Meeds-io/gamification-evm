<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

  <property name="autoIncrement" value="true" dbms="mysql,mssql,h2,sybase,db2,hsqldb"/>
  <property name="autoIncrement" value="false" dbms="oracle,postgresql"/>

  <!-- Definition of EVM_TRANSACTION_DETAILS table -->
  <changeSet author="evm-connector" id="1.0.0-1">
    <createTable tableName="EVM_TRANSACTION_DETAILS">
      <column name="ID" type="BIGINT" autoIncrement="${autoIncrement}" startWith="1">
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_EVM_TRANSACTION_DETAILS"/>
      </column>
      <column name="TRANSACTION_HASH" type="NVARCHAR(250)">
        <constraints nullable="false"/>
      </column>
      <column name="NETWORK_ID" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="FROM_ADDRESS" type="NVARCHAR(250)">
        <constraints nullable="false"/>
      </column>
      <column name="TO_ADDRESS" type="NVARCHAR(250)">
        <constraints nullable="false"/>
      </column>
      <column name="CONTRACT_ADDRESS" type="NVARCHAR(250)">
        <constraints nullable="false"/>
      </column>
      <column name="SENT_DATE" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="AMOUNT" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="TREATED_TRANSACTION_STATUS" type="NVARCHAR(250)">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
  <changeSet author="evm-connector" id="1.0.0-2" dbms="oracle,postgresql,hsqldb" onValidationFail="MARK_RAN" failOnError="false">
    <validCheckSum>ANY</validCheckSum>
    <preConditions>
      <not>
        <sequenceExists sequenceName="SEQ_EVM_TRANSACTION_DETAILS_ID" />
      </not>
    </preConditions>
    <createSequence sequenceName="SEQ_EVM_TRANSACTION_DETAILS_ID" startValue="1"/>
  </changeSet>
  <changeSet author="evm-connector" id="1.0.0-3">
    <createTable tableName="EVM_EVENT_STATUS">
      <column name="ID" type="BIGINT">
        <constraints foreignKeyName="FK_EVM_EVENT_STATUS" references="EVM_TRANSACTION_DETAILS(ID)" deferrable="false" initiallyDeferred="false" deleteCascade="true" />
      </column>
      <column name="TRIGGER" type="NVARCHAR(250)">
        <constraints nullable="false" />
      </column>
      <column name="TREATED_TRANSACTION_STATUS" type="INT" defaultValueNumeric="0">
        <constraints nullable="false" />
      </column>
    </createTable>
    <modifySql dbms="mysql">
      <append value=" ENGINE=INNODB CHARSET=UTF8 COLLATE utf8_general_ci" />
    </modifySql>
  </changeSet>
  <changeSet id="1.0.0-4" author="evm-connector">
    <dropColumn tableName="EVM_TRANSACTION_DETAILS" columnName="TREATED_TRANSACTION_STATUS"/>
  </changeSet>
  <!-- Changeset to delete old data -->
  <changeSet id="1.0.0-5" author="evm-connector">
    <delete tableName="EVM_TRANSACTION_DETAILS" />
  </changeSet>
  <changeSet id="1.0.0-6" author="evm-connector">
    <delete tableName="EVM_EVENT_STATUS" />
  </changeSet>

</databaseChangeLog>


